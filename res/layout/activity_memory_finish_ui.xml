<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/default_color"
    android:layout_height="match_parent" >

    <include
        android:id="@+id/top"
        layout="@layout/common_title" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top"
        android:orientation="vertical" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1" >
            <ImageView 
                android:id="@+id/login_lo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/best"/>
            <ImageView 
                android:layout_marginTop="15dip"
                android:layout_below="@+id/login_lo"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/memory_finshed_today"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1" >
            <RelativeLayout 
                android:id="@+id/again_ten_re"
                android:layout_height="45dip"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:background="@drawable/memory_finshed_bg_button"
                android:layout_above="@+id/again_re"
                android:layout_marginBottom="20dip"
                android:layout_width="match_parent">
                <Button 
                    android:id="@+id/againTenQuesion"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:background="@null"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:text="再来十个"/>
            </RelativeLayout>
             <RelativeLayout 
                android:id="@+id/again_re"
                android:layout_height="45dip"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_centerVertical="true"
                android:background="@drawable/memory_finshed_bg_button"
                android:layout_width="match_parent">
                <Button 
                    android:id="@+id/practiceOtherSubjects"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:background="@null"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:text="练习其他科目"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>