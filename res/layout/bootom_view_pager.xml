<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:background="@color/default_color"
    android:paddingTop="@dimen/common_interval_button_bootom"
    android:paddingBottom="@dimen/common_interval_button_bootom">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@color/white">
        <Button
            android:id="@+id/next_question"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:text="@string/xiayige"
            android:paddingLeft="30dip"
            android:background="@null"
            android:gravity="center|left"
            android:textColor="#00A2E9"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/zhong_text"
            android:layout_width="match_parent"
            android:layout_height="0.8dip"
            android:layout_below="@+id/next_question"
            android:layout_centerVertical="true"
            android:background="@color/default_color" />
        <Button
            android:id="@+id/remmber_again_button"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:layout_below="@+id/zhong_text"
            android:text="@string/zaicijiyi"
            android:background="@null"
            android:gravity="center|left"
            android:paddingLeft="30dip"
            android:textColor="#00A2E9"
            android:textSize="18sp" />
    </RelativeLayout>
</RelativeLayout>