<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/default_color" 
    android:paddingTop="@dimen/common_interval_button_bootom"
    android:paddingBottom="@dimen/common_interval_button_bootom">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/common_interval_button_bootom"
        android:layout_marginRight="@dimen/common_interval_button_bootom"
        android:background="@color/white" >
        <Button
            android:id="@+id/next_question"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:background="@null"
            android:gravity="center|left"
            android:paddingLeft="30dip"
            android:text="@string/jide"
            android:textColor="#00A2E9"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/zhong_text"
            android:layout_width="match_parent"
            android:layout_height="0.8dip"
            android:layout_below="@+id/next_question"
            android:layout_centerVertical="true"
            android:background="@color/default_color" />

        <Button
            android:id="@+id/remmber_again_button"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:layout_below="@+id/zhong_text"
            android:background="@null"
            android:gravity="center|left"
            android:paddingLeft="30dip"
            android:text="@string/bujide"
            android:textColor="#00A2E9"
            android:textSize="18sp" />
    </RelativeLayout>

</RelativeLayout>